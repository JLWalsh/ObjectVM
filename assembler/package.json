{
  "dependencies": {
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3"
  },
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "@types/node": "^11.9.0",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1"
  },
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.{ts}'",
    "test": "jest",
    "start": "ts-node ./src/index.ts"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "\\.(ts)$": "ts-jest"
    },
    "testRegex": "/__tests__/.*\\.(ts)$"
  }
}